<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".FoodcupGameActivity">

    <TextView
        android:id="@+id/type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dunggeunmo"
        android:text="8강"
        android:textColor="#f3f3f3"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/type_txt"
        android:fontFamily="@font/dunggeunmo"
        android:text="******"
        android:textColor="#f3f3f3"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/type_txt"
        android:fontFamily="@font/dunggeunmo"
        android:text="******"
        android:textColor="#f3f3f3"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/type_txt"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/f4"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/img1"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="음식1"
        android:textColor="#f3f3f3"
        android:textSize="20dp" />

    <ImageButton

        android:id="@+id/img2"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text1"
        android:scaleType="fitXY"
        android:src="@drawable/f5" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="음식2"
        android:textColor="#f3f3f3"
        android:fontFamily="@font/dunggeunmo"
        android:textSize="20dp"
         />

</RelativeLayout>